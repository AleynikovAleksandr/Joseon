<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TreeViewItem Header="Компилируемые языки программирования">
                <TreeViewItem Header="PHP" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
                <TreeViewItem Header="Ruby" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
                <TreeViewItem Header="JavaScript" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Интерпретируемые языки программирования">
                <TreeViewItem Header="C" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
                <TreeViewItem Header="C++" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
                <TreeViewItem Header="Python" MouseEnter="TreeViewItem_MouseEnter"></TreeViewItem>
            </TreeViewItem>
        </StackPanel>
    </Grid>

</Window>
